@model August7thWebsite.Models.ScoreCard


<!--About view--><center>
    @{ ViewData["Title"] = "This is the completed scorecorecard, on the FinishedScorecard page!"; }
    <h2>@ViewData["Title"]</h2>
    <h3>@ViewData["Message"]</h3>
</center>
<br>
<br>

<style>
    .CenterTextColumn {
        text-align: center
    }
</style>


<div class="picture" style=" background-color: #F20519; margin:20px; padding: 20px;  border: 10px dashed black; color: white; text-align:center">


    <!--<h1>value: @Html.DisplayFor(model => model.Round_1_B1)</h1>-->
    <center>
        <div>
            @Html.DisplayFor(model => model.FirstNameOnCard)
            @Html.DisplayFor(model => model.LastNameOnCard)
            <br />
            @Model.DateCreated.ToShortDateString()
        </div>


        <table>

            <tr>
                <th class="CenterTextColumn">Boxer 1</th>
                <th></th>
                <th class="CenterTextColumn">Boxer 2</th>
            </tr>
            <tr>
                <td><input class="form-control" value="@Html.DisplayFor(model => model.Round_1_B1)" /></td>
                <td class="CenterTextColumn">1</td>
                <td><input class="form-control" value="@Html.DisplayFor(model => model.Round_1_B2)" /></td>
            </tr>
            <tr>
                <td><input class="form-control" value="@Html.DisplayFor(model => model.Round_2_B1)" /></td>
                <td class="CenterTextColumn">2</td>
                <td><input class="form-control" value="@Html.DisplayFor(model => model.Round_2_B2)" /></td>
            </tr>
            <tr>
                <td><input class="form-control" value="@Html.DisplayFor(model => model.Round_3_B1)" /></td>
                <td class="CenterTextColumn">3</td>
                <td><input class="form-control" value="@Html.DisplayFor(model => model.Round_3_B2)" /></td>
            </tr>

            <tr>
                <td><input class="form-control" value="@Html.DisplayFor(model => model.Total_B1)" /></td>
                <td class="CenterTextColumn">Total</td>
                <td><input class="form-control" value="@Html.DisplayFor(model => model.Total_B2)" /></td>
            </tr>
        </table>

        <h3> see others' scorecard</h3>
        <a asp-action="Index">Back to List</a>
    </center>
</div>
<br>





<style>
    body {
        font-family: Arial, Helvetica, sans-serif;
    }

    .flip-card {
        background-color: transparent;
        width: 300px;
        height: 600px;
        perspective: 1000px;
    }

    .flip-card-inner {
        position: relative;
        width: 100%;
        height: 100%;
        text-align: center;
        transition: transform 0.6s;
        transform-style: preserve-3d;
        box-shadow: 0 4px 8px 0 rgba(0,0,0,0.2);
    }

    .flip-card:hover .flip-card-inner {
        transform: rotateY(180deg);
    }

    .flip-card-front, .flip-card-back {
        position: absolute;
        width: 100%;
        height: 100%;
        -webkit-backface-visibility: hidden;
        backface-visibility: hidden;
    }

        .flip-card-front.blue {
            background-color: blue;
            color: black;
        }

        .flip-card-front.yellow {
            background-color: yellow;
            color: black;
        }

        .flip-card-front.red {
            background-color: red;
            color: black;
        }

        .flip-card-back.red {
            background-color: red;
            color: white;
            transform: rotateY(180deg);
        }

        .flip-card-back.blue {
            background-color: blue;
            color: white;
            transform: rotateY(180deg);
        }

        .flip-card-back.yellow {
            background-color: yellow;
            color: black;
            transform: rotateY(180deg);
        }
</style>
