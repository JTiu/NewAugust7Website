@model SearchRequest

@{
    ViewData["Title"] = "PickFight";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1 style="text-align:center">Pick A Fight</h1>
<div class="picture" style=" background-color: #F20519; margin:20px; padding: 20px;  border: 10px dashed black; color: white; text-align:center">

    <h2> <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Privacy" asp-route-id="1">Canelo vs GGG</a> </h2>

</div>


<div class="picture" style=" background-color: #F20519; margin:20px; padding: 20px;  border: 10px dashed black; color: white; text-align:center">

    <h2><a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Privacy" asp-route-id="2">Ward vs Kovalev</a></h2>


</div>

<div class="picture" style=" background-color: #F20519; margin:20px; padding: 20px;  border: 10px dashed black; color: white; text-align: center">


    <h2><a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Privacy" asp-route-id="3">Chocolatito vs Estrada</a></h2>
</div>

<div>
    <form asp-action="PickFight">

        <div class="form-group">
            <label>

                Select your Own 12 Round Fight
            </label>
            <input asp-for="Keyword" />

            <input type="submit" value="search" class="btn btn-primary" />

        </div>

    </form>





</div>

@if (ViewBag.videoSrcs != null)
{
    @foreach (var item in ((List<string>)ViewBag.videoSrcs))
    {
        <div>
            <div style="width: 560px; height: 315px; float: none; clear: both; margin: 2px auto;">
                <embed src= "@item"
                       wmode="transparent"
                       type="video/mp4"
                       width="100%" height="100%"
                       allow="autoplay; encrypted-media; picture-in-picture"
                       allowfullscreen
                       title="Search Results of your Keyword">
            </div>
        </div>
    }


}
